	<artifactId>smart-monitor</artifactId>
	<packaging>war</packaging>
	<version>0.0.1-SNAPSHOT</version>
	<name>smart-monitor Maven Webapp</name>
	<url>http://maven.apache.org</url>

	<properties>
		<!-- maven plugin -->
